# Prompt
alias cls="clear && printf '\e[3]'"
 
# mv, rm, cp, gunzip
alias mv='mv -v'
alias rm='rm -i -v'
alias cp='cp -v'

# zshrc config
alias reload="source ~/.zshrc && echo 'Shell config reloaded from ~/.zshrc'"
# Oh My Zsh Aliases
alias zshconfig="nano ~/.zshrc"
alias ohmyzsh="cd ~/.oh-my-zsh"

# Clipboard
alias pbcopy='xclip -selection clipboard'
alias pbpaste='xclip -selection clipboard -o'

# Youtube-dl
alias ytdlmp3='youtube-dl --output "~/Music/%(title)s.%(ext)s" --extract-audio --audio-format mp3 --audio-quality 0'
alias ytdlvid480='youtube-dl --output "~/Videos/%(title)s.%(ext)s" -f "bestvideo[height<=480]+bestaudio/best[height<=480]"'
alias ytdlvid720='youtube-dl --output "~/Videos/%(title)s.%(ext)s" -f "bestvideo[height<=720]+bestaudio/best[height<=720]"'

# Spotify-downloader
alias spotmp3='python3 ~/Downloads/spotify-downloader/spotdl.py --folder ~/Music/ --song'

# Android Emulator
alias emunexus5='~/Android/Sdk/tools/emulator -use-system-libs @Nexus_5X_API_23'

# React Native Force Kill Node Server
alias rngetpid='lsof -i :8081'
